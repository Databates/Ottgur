<%= render "users/users_menu" %>

<h3>Comments</h3>
<ul id="user-comments">
  <% @comments.each do |comment| %>
    <li class="comment"><%= link_to image_tag(Image.find(comment.image_id).submission.thumb.url), Image.find(comment.image_id), class: "thumb" %>&ldquo;<%= comment.text %>&rdquo;</li>
  <% end %>
</ul>
